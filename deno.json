{
  "lint": {
    "exclude": [
      "**/build",
      "**/dist"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "no-non-null-assertion",
        "no-inferrable-types",
        "no-console",
        "guard-for-in",
        "camelcase",
        "ban-untagged-todo"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "**/build",
      "**/dist"
    ],
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
